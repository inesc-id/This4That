<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.this4that_client.fragment.ReportDataFragment">


    <RelativeLayout
        android:id="@+id/layout_report_interactive_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="30dp"
                android:padding="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_question">

            <RelativeLayout
                android:id="@+id/first_row_answers"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:text="1 Answer"
                    android:id="@+id/btnFirstAnswer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/btnSecondAnswer"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:text="2 Answer"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/relativeLayout">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:text="3 Answer"
                    android:id="@+id/btnThirdAnswer"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:id="@+id/btnFourthAnswer"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:text="4 Answer"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp" />

            </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
