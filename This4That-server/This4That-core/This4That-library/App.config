<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <log4net>
    <appender name="MultichainLOG" type="log4net.Appender.FileAppender">
      <file value="Multichain.log" />
      <appendToFile value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %method %line %newline [Debug Message] - %message%newline" />
      </layout>
    </appender>
    
    <root>
      <level value="ALL" />
    </root>

    <logger name="MultichainLOG" additivity="false">
      <level value="ALL"/>
      <appender-ref ref="MultichainLOG"/>
    </logger>
  </log4net>
</configuration>
